
<div class="row">

{{#each albums as |album|}}


  <div class="col-md-4 col-sm-6" data-id="{{album.id}}" id="remove-{{album.id}}">
    <div class="thumbnail">
      <img class="thumbnail-image" src="{{album.image}}" alt="{{album.album}} album cover">
        <div class="caption">
          <h3>
              {{#if album.ranking}}
              # {{album.ranking}} - {{album.album}}
            {{else}}
              N/A - {{album.album}}
            {{/if}}
          </h3>
        <h4>Artist: {{album.artist}}</h4>
        <h4>Year: {{album.year}}</h2>
        <p><button href="#" class="btn btn-primary rate-album" role="button" id="modify-{{album.id}}" >View Album</button>
      </div>
    </div>
  </div>

{{/each}}

</div>
